<%= form_with model: @project do |f| %>
  <div class="sm:max-w-lg sm:w-full sm:flex">
    <div class="min-w-0 flex-1">
      <h3 class="h3">What kind of project do you want to start?</h3>
      <%= f.select :project_type, options_for_select(Project.project_types.keys.map{|type| [type.titleize, type]}, f.object.project_type), {include_blank: true}, {required: true, class: "block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"} %>
    </div>
  </div>
  <div class="mt-4">
    <%= f.submit "Next", class:"cursor-pointer inline-flex rounded-md border border-transparent px-5 py-2 mt-1 bg-rose-500 text-sm font-medium text-white shadow hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2" %>
  </div>
<% end %>