<li class="relative bg-white py-5 px-4 hover:bg-gray-50 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600" id="campaign-<%= campaign.id %>">
  <div class="flex justify-between space-x-3">
  
    <div class="min-w-0 flex-1">
      <%= link_to edit_campaign_path(campaign), class: "block hover:underline focus:outline-none" do %>
        <span class="absolute inset-0" aria-hidden="true"></span>
        <%= campaign.title %>
        <!--<p class="text-sm text-gray-500 truncate">Velit placeat sit ducimus non sed</p>-->
      <% end %>
      <div class="mt-1">
	    <p class="line-clamp-2 text-sm text-gray-600 truncate"><%= %></p>
	  </div>
    </div>
	  
	  <time datetime="2021-01-27T16:35" class="flex-shrink-0 whitespace-nowrap text-sm text-gray-500"><%= time_ago_in_words(campaign.created_at) %></time>
  </div>
</li>